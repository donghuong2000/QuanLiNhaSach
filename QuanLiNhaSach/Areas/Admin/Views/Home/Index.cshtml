
@{
    ViewData["Title"] = "Admin";
}

<div class="container-fluid">

    <!-- Page Heading -->
    <div class="d-sm-flex align-items-center justify-content-between mb-4">
        <h1 class="h3 mb-0 text-gray-800">Trang chủ</h1>
        
    </div>

    <!-- Content Row -->
    <div class="row">

        <!-- Earnings (Monthly) Card Example -->
        <div class="col-md-6">
            <div class="card border-left-primary shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-primary text-uppercase mb-1">
                                Doanh thu 
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.DoanhThu</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-calendar fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Earnings (Monthly) Card Example -->
        <div class=" col-md-6">
            <div class="card border-left-success shadow h-100 py-2">
                <div class="card-body">
                    <div class="row no-gutters align-items-center">
                        <div class="col mr-2">
                            <div class="text-xs font-weight-bold text-success text-uppercase mb-1">
                                Dư nợ  
                            </div>
                            <div class="h5 mb-0 font-weight-bold text-gray-800">@ViewBag.No</div>
                        </div>
                        <div class="col-auto">
                            <i class="fas fa-dollar-sign fa-2x text-gray-300"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>

       
       
    </div>

    <!-- Content Row -->

    <div class="row mt-5">
        <!-- Area Chart -->
        <div class="col-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Thống kê doanh thu</h6>
                    <div class="d-flex" id="thongkedt">
                        <select class="form-control thongke_inputdt" id="useriddt" asp-items="ViewBag.UserAdminList">
                            <option value="">Tất cả</option>
                        </select>
                        <input type="month" id="date_thongkedt" value="@DateTime.Now.ToString("yyyy-MM")" class="form-control thongke_inputdt" />
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaDoanhthuChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <!-- Area Chart -->
        <div class="col-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Thống kê nợ</h6>
                    <div class="d-flex" id="thongke">
                        <select class="form-control thongke_input" id="userid" asp-items="ViewBag.UserList">
                            <option value="">Tất cả</option>
                        </select>
                        <input type="month" id="date_thongke" value="@DateTime.Now.ToString("yyyy-MM")" class="form-control thongke_input" />
                    </div>
                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myAreaChart"></canvas>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-12">
            <div class="card shadow mb-4">
                <!-- Card Header - Dropdown -->
                <div class="card-header py-3 d-flex flex-row align-items-center justify-content-between">
                    <h6 class="m-0 font-weight-bold text-primary">Thống kê sách </h6>

                </div>
                <!-- Card Body -->
                <div class="card-body">
                    <div class="chart-area">
                        <canvas id="myBarChart"></canvas>
                    </div>
                </div>
            </div>
        </div>



    </div>

    

</div>

@section Scripts{
    <!-- Page level plugins -->
    <script src="~/Admin/vendor/chart.js/Chart.min.js"></script>

    <!-- Page level custom scripts -->
    <script src="~/Admin/js/demo/chart-area-demo.js"></script>
    @*<script src="~/Admin/js/demo/chart-pie-demo.js"></script>*@
    <script src="~/Admin/js/demo/chart-bar-demo.js"></script>
   


}