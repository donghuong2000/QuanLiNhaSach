

@{
    ViewData["Title"] = "Danh sách hóa đơn";
}

`

<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
        <h6 class="m-0 font-weight-bold text-primary">Danh sách hóa đơn</h6>
        <a class="btn btn-primary ml-auto" asp-action="upsert">Tạo hóa đơn</a>
    </div>
    <div class="card-body">
        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Người lập hóa đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày lập </th>
                        <th>Tổng tiền</th>
                        <th></th>

                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Mã hóa đơn</th>
                        <th>Người lập hóa đơn</th>
                        <th>Khách hàng</th>
                        <th>Ngày lập </th>
                        <th>Tổng tiền</th>
                        <th></th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/Admin/js/build/toastr.min.js"></script>



    <script src="~/Admin/js/bill.js"></script>
}

@section Header{
    <link href="~/Admin/js/build/toastr.css" rel="stylesheet" />
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
}