
@{
    ViewData["Title"] = "Báo cáo Nợ";
}




<div class="card shadow mb-4">
    <div class="card-header py-3 d-flex">
        <h6 class="m-0 font-weight-bold text-primary">Báo cáo nợ</h6>
    </div>
    <br />
    <h6 class="m-0 font-weight-bold text-danger text-center">Chọn tháng cần hiện báo cáo</h6>
    <div class="d-flex justify-content-center">
        <input style="width:300px" type="month" name='time_debit' id="time_debit" class="form-control">
        <a class="btn btn-success text-white" style="cursor:pointer" id="button_create_debit">
            Tạo báo cáo
        </a>
        <a class="btn btn-warning text-white" style="cursor:pointer" id="button_update_debit">
            <i class="fas fa-sync"></i>
        </a>
    </div>

    <div class="card-body">

        <div class="table-responsive">
            <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
                <thead>
                    <tr>
                        <th>Khách Hàng Nợ</th>
                        <th>Tháng Nợ</th>
                        <th>Nợ đầu</th>
                        <th>Phát sinh</th>
                        <th>Nợ cuối</th>
                    </tr>
                </thead>
                <tfoot>
                    <tr>
                        <th>Khách Hàng Nợ</th>
                        <th>Tháng Nợ</th>
                        <th>Nợ đầu</th>
                        <th>Phát sinh</th>
                        <th>Nợ cuối</th>
                    </tr>
                </tfoot>
            </table>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/Admin/vendor/datatables/jquery.dataTables.js"></script>
    <script src="~/Admin/vendor/datatables/dataTables.bootstrap4.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/sweetalert2@10"></script>
    <script src="~/Admin/js/build/toastr.min.js"></script>



    <script src="~/Admin/js/debit.js"></script>
}

@section Header{
    <link href="~/Admin/js/build/toastr.css" rel="stylesheet" />
    <link href="~/Admin/vendor/datatables/dataTables.bootstrap4.css" rel="stylesheet" />
}

